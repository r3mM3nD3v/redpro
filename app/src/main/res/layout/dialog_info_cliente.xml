<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tvInfoCliente"
        android:text="@string/tvInfoCliente"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/azul_marino_oscuro"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/ibCerrar"
        android:src="@drawable/ic_cerrar"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivPerfil"
        android:src="@drawable/img_perfil"
        android:layout_below="@id/tvInfoCliente"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/txtNombresC"
        android:text="@string/txtNombresC"
        android:textColor="@color/azul_marino_oscuro"
        android:textStyle="bold"
        android:layout_below="@id/ivPerfil"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNombresC"
        android:text="@string/tvNombresC"
        android:layout_below="@id/txtNombresC"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtDniC"
        android:text="@string/txtDniC"
        android:textColor="@color/azul_marino_oscuro"
        android:textStyle="bold"
        android:layout_below="@id/tvNombresC"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDniC"
        android:text="@string/tvDniC"
        android:layout_below="@id/txtDniC"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTelC"
        android:text="@string/tvTelC"
        android:layout_below="@id/tvDniC"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtDireccionC"
        android:text="@string/txtDireccionC"
        android:textColor="@color/azul_marino_oscuro"
        android:textStyle="bold"
        android:layout_below="@id/tvTelC"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDireccionC"
        android:text="@string/tvDireccionC"
        android:layout_below="@id/txtDireccionC"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@id/tvDireccionC"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>